<launch>
    <!-- Camera Quality Parameter -->
    <arg name="camera_resolution" default="HD" /> <!-- Choose between: VGA, HD, FHD, 2K-->
    <!-- Distance between Wrist and Index Finger MCP Parameter (for hand scale) -->
    <arg name="wrist_if_mcp_topic" default="0.10" />
    <!-- ROS Topic Parameters -->
    <arg name="image_topic" default="/zed/stereo_image" />
    <arg name="keypoints_topic" default="/hand_keypoints" />

    <!-- Node -->
    <node name="mediapipe_stereo" pkg="mediapipe" type="mediapipe_stereo.py" output="screen">
        <!-- Set Parameters -->
        <param name="camera_resolution" value="$(arg camera_resolution)" />
        <param name="wrist_if_mcp_topic" value="$(arg wrist_if_mcp_topic)" />
        <param name="image_topic" value="$(arg image_topic)" />
        <param name="keypoints_topic" value="$(arg keypoints_topic)" />
    </node>
</launch>
